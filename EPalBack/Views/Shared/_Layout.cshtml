<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ePal Product</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/bootstrap/dist/css/googleapis.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <!-- Add this to <head> -->
    <!-- Load required Bootstrap and BootstrapVue CSS -->
    <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-vue.css" />

    <!-- Load polyfills to support older browsers -->
    <script src="//polyfill.io/v3/polyfill.min.js?features=es2015%2CIntersectionObserver"
            crossorigin="anonymous"></script>

    <!-- Load Vue followed by BootstrapVue -->
    <script src="~/lib/bootstrap/dist/js/vue.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-vue.min.js"></script>

    <!-- Load the following for BootstrapVueIcons support -->
    <script src="~/lib/bootstrap/dist/js/bootstrap-vue-icons.min.js"></script>

    <!-- import CSS -->
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/elementui.css">*@
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">

    <script src="~/lib/bootstrap/dist/js/Common.js"></script>

   

    @*<link href="~/lib/bootstrap/dist/css/elementui.css" rel="stylesheet" />*@

    <!-- toastr -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/toastr.min.css">


    @await RenderSectionAsync("topCSS", required: false)
    @await RenderSectionAsync("topJS", required: false)
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/EpalBack/Home">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">ePal 管理員</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="/EpalBack/Home">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>儀錶板</span>
                </a>
            </li>

            <!-- Order Manager -->
            <li class="nav-item">
                <a class="nav-link" href="/EpalBack/Order">
                    <i class="fas fa-fw fa-table"></i>
                    <span>訂單管理</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/EpalBack/Product">
                    <i class="fas fa-fw fa-table"></i>
                    <span>商品管理</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/EpalBack/Member">
                    <i class="fas fa-fw fa-table"></i>
                    <span>會員管理</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/EpalBack/Games">
                    <i class="fas fa-fw fa-table"></i>
                    <span>遊戲管理</span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        @RenderBody()
    </div>

















    @await RenderSectionAsync("Scripts", required: false)
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    <!-- toastr -->
    <script src="~/lib/bootstrap/dist/js/toastr.min.js"></script>

    <!-- Axios -->
    <script src="~/lib/bootstrap/dist/js/axios.min.js"></script>

    @*<script src="~/lib/bootstrap/dist/js/statecheck.js"></script>*@

    <!-- import JavaScript -->
    <script src="https://unpkg.com/element-ui/lib/index.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/elementui.js"></script>*@
    @await RenderSectionAsync("endCSS", required: false)
    @await RenderSectionAsync("endJS", required: false)
</body>
</html>
